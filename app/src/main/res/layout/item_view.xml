<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/item_imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin_8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_5"
                android:layout_weight="20"
                android:text="hello world"
                android:textAppearance="@style/heading_1"
                android:layout_gravity="center"/>

            <ImageButton
                android:id="@+id/item_favBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_star_border"
                android:background="@android:color/transparent"
                android:layout_margin="@dimen/margin_10"
                android:layout_gravity="center"/>

        </LinearLayout>

        <TextView
            android:id="@+id/item_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_5"
            android:text="hello world"
            android:textAppearance="@style/address_1" />

        <TextView
            android:id="@+id/item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_3"
            android:layout_marginBottom="@dimen/margin_5"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="hello world this is vandit and i adsdasds dfdsf sdfsdf sdf sdf sd fs df sdfsdfsdfsdf sdf sd fsd fsdfsdfs dfs fs dfs fsfsfsdf sdfsdfsf dfsfsfdsf sdfsfsf sfdsfsf fs fdsfsfsdfs fsfsfdfsfsdfdsf fsdfsf"
            android:textAppearance="@style/desc_1" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>